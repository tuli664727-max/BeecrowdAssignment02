#include <iostream>
using namespace std;
 
int main() {
   int N;
   cin >> N;
 
   while (N--) {
       int X, Y;
       cin >> X >> Y;
 
       // Ensure X is smaller than Y
       if (X > Y) swap(X, Y);
 
       int sum = 0;
       // Sum all odd numbers strictly between X and Y
       for (int i = X + 1; i < Y; i++) {
           if (i % 2 != 0) {
               sum += i;
           }
       }
 
       cout << sum << endl;
   }
 
   return 0;
}
